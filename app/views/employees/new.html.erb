<h1>Create a new Employee</h1>
<% if @employee.errors.any? %>
  <div>
    <h4>You got some errors</h4>
    <ul>
    <% @employee.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
      <% end %>
      </ul>
  </div>
<% end %>

<%= form_for @employee do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <br>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <br>
  <%= f.label :alias %>
  <%= f.text_field :alias %>
  <br>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :img_url %>
  <%= f.text_field :img_url %>
  <br>
  <%= f.label :office %>
  <%= f.text_field :office %>
  <br>

  <%# select a dog %>
  <%= f.label :dog_id %>
  <%= f.collection_select :dog_id, @dogs, :id, :name%>
  <br>
  <%= f.submit "New employee sign up" %>

<% end %>
